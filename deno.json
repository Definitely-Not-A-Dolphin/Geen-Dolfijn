{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package jj&& publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "imports": {
    "@neodrag/svelte": "npm:@neodrag/svelte@next",
    "@sveltejs/adapter-node": "npm:@sveltejs/adapter-node@^5.4.0",
    "@sveltejs/kit": "npm:@sveltejs/kit@^2.16.0",
    "@sveltejs/package": "npm:@sveltejs/package@^2.0.0",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^5.0.0",
    "publint": "npm:publint@^0.3.2",
    "svelte": "npm:svelte@^5.0.0",
    "svelte-check": "npm:svelte-check@^4.0.0",
    "svelte-preprocess": "npm:svelte-preprocess@^6.0.3",
    "typescript": "npm:typescript@^5.0.0",
    "vite": "npm:vite@^6.2.6"
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "camelCase",
        "eqeqeq",
        "explicit-function-return-type",
        "no-const-reassign",
        "no-eval"
      ]
    }
  }
}
