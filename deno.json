{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package jj&& publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@sveltejs/adapter-cloudflare": "npm:@sveltejs/adapter-cloudflare@^7.0.3",
    "@sveltejs/kit": "npm:@sveltejs/kit@^2.16.0",
    "@sveltejs/package": "npm:@sveltejs/package@^2.0.0",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^5.0.0",
    "process": "npm:process@^0.11.10",
    "publint": "npm:publint@^0.3.2",
    "svelte": "npm:svelte@^5.0.0",
    "svelte-check": "npm:svelte-check@^4.0.0",
    "typescript": "npm:typescript@^5.0.0",
    "vite": "npm:vite@^6.2.6",
    "octokit": "npm:octokit@^5.0.3"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/lib/customTypes.ts"],
    "rules": {
      "tags": ["recommend", "jsr"],
      "include": ["camelcase", "egegeg", "explicit-function-return-type"]
    }
  }
}
